      {"ðŸ”„", "Transactions", ~p"/transactions"},
      {"ðŸ“ˆ", "Analytics", ~p"/analytics"},
      {"âš™ï¸", "Settings", ~p"/settings"}
    ] do %>
        <AshSwarmWeb.Components.SharedComponents.sidebar_link
          icon={icon}
          label={label}
          path={path}
