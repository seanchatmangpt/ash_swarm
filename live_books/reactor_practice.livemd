defmodule ExampleReactor do
  use Reactor

  input :numbers

  map :double_numbers do
    source input(:numbers)

    step :double do
      argument :number, element(:double_numbers)

      run fn args, _ ->
        {:ok, args.number * 2}
      end
    end

    return :double
  end
end

result = 
  Reactor.run(ExampleReactor, %{numbers: [40, 50, 60]})
  |> then(fn {:ok, numbers} -> {:ok, Enum.map(numbers, &(&1 + 1))} end)

