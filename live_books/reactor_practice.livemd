  @impl true
  def run(%{email: email, plan_name: plan_name, notification_status: notification_status}, _context, _opts) do
    IO.puts("Tracking conversion for #{email}, plan: #{plan_name}, notification: #{inspect(notification_status)}")
    {:ok, %{tracked: true}}
