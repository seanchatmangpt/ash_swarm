defmodule PromptStep do
  use Reactor.Step

  @impl true
  def run(arguments, _context, _options) do
    # Retrieve the prompt from the arguments.
    prompt = arguments[:prompt]

    # Build the parameters for Instructor.chat_completion.
    # params = [
